<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_quiz"
    tools:context=".Activity.BookingActivity">

    <TextView
        android:layout_marginTop="@dimen/thirty_dp"
        android:textAlignment="center"
        android:textSize="30sp"
        android:id="@+id/select_vehicle_type"
        android:textColor="@android:color/holo_green_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select vehicle"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <RadioButton
                    android:layout_marginRight="0dp"
                    android:drawableLeft="@drawable/icon_trolly"
                    android:id="@+id/radio1"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="-5dp"
                    android:layout_gravity="right"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_green_light"
                   />



                <RadioButton
                    android:layout_marginLeft="5dp"
                    android:textColor="@android:color/holo_green_light"
                    android:id="@+id/radio2"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:drawableLeft="@drawable/icon_car"
                    android:layout_height="wrap_content"
                     />


                <RadioButton
                    android:textColor="@android:color/holo_green_light"
                    android:id="@+id/radio3"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@drawable/icon_cycle"
                    android:layout_height="wrap_content"
                    />
            </RadioGroup>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:paddingLeft="30dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="20sp"
            android:textColor="@android:color/holo_green_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Source    : Your Location "/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="3"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:textColor="@android:color/holo_green_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location : "/>

            <Spinner
                android:layout_marginTop="7dp"
                android:padding="10dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:id="@+id/spinner"
                android:background="@drawable/spinner_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                />


        </LinearLayout>


        <TextView
            android:id="@+id/distance_booking"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:textColor="@android:color/holo_green_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Distance : 105 km"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""/>


        <TextView
            android:textColor="@android:color/holo_green_light"
            android:id="@+id/price"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price        : Rs. 2000"/>

        <Button
            android:layout_gravity="center"
            android:id="@+id/btnLogin"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Book vehicle"
            android:textColor="@color/white"
            android:elevation="5dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/corner_curv"
            />


    </LinearLayout>



</LinearLayout>